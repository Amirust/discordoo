{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "esnext.array", "esnext.asynciterable", "esnext.intl", "esnext.symbol", "es6"],
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "pretty": true,
    "incremental": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": [ "src/*" ],
      "@root/*": [ "./*" ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ],
  "include": [
    "src/**/*"
  ]
}
